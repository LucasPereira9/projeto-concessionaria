{% extends "layout.njk" %}

{% block head %}

<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
      <title>layout - partidas</title>

      {% endblock %}

{% block content %}

    <div id="container">
        <h1>Partidas hist√≥ricas</h1>
    </div>
    
    <section class="cards">

        {% for item in items %}

        <div class="card" id="{{item.id}}">
            <div class="card-imagem">
                <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="{{item.title}}">
            </div>
            <div class="conteudo-card">
                <p>{{item.title}}</p>
            </div>
            <div class="info-card">
               <p>{{item.duration}}</p> 
               <p class="card-price"> {{item.price}}</p>
            </div>
        </div>

        {% endfor %}
        
    </section>

    <div class="modal-back">
        <div class="modal">
            <a class="close-modal">
                <i class="material-icons">close</i>
            </a>
            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>

    
    <script src="scripts.js"></script>

{% endblock %} 