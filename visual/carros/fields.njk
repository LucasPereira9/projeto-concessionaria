 <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input  type="url"
                            name="avatar_url" 
                            placeholder="Http://"
                            value="{{carros.avatar_url}}">
                         </div>
            </div>

            <div class="item">
                <div>Modelo do veiculo</div>
                <div>
                    <input  type="text"
                            name="model" 
                            placeholder="Digite modelo e potencia. (ex: gol 1.0)"
                            value="{{carros.model}}">
                         </div>
            </div>
                   <div class="item">
                <div>Ano</div>
                <div>
                    <input  type="number" min=1990 max=2021
                            name="year"
                             placeholder="(ex: 2018)"
                             value="{{carros.year}}">
                </div>
            </div>
                   <div class="item">
                <div>combustivel</div>
                <div>
                    <span>
                        <input type="radio"
                         name="fuel" 
                         value="G"
                         {% if carros.fuel == 'G' %}
                            checked
                         {% endif %}
                          checked>Gasolina
                    </span>
                    <span>
                        <input type="radio"
                         name="fuel"
                          value="F"
                          {% if carros.fuel == 'F' %}
                             checked
                         {% endif %}
                          >Flex
                    </span>
                </div>
            </div>
                   <div class="item">
                <div>Opcionais</div>
                <div>
                    <input  type="text" 
                            name="optional" 
                            placeholder="Separe os opcionais por VÃ­rgula"
                           value="{{carros.optional}}"  >
                </div>
            </div>
          <button type="submit">Salvar</button>