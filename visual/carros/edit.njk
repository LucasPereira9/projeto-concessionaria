{% extends "layout.njk" %}

{% block content %}
    <form class="card" method="POST" action="/carros">
        <section class="avatar">
            <img src="https://th.bing.com/th/id/R.f7ed6de00a989a8ed89b42271c0a19d5?rik=H3QNIaJ8s6B5fw&riu=http%3a%2f%2fclipart-library.com%2fimages%2f5TRrdRrGc.jpg&ehk=Wm9V0kgvPdxfStofLRCpp1KuMvj%2fpT9Spuw0%2fitdzPE%3d&risl=&pid=ImgRaw&r=0">
        </section>
        
        <section class="details">

            <h3>Novo Veículo</h3>

              <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input  type="url"
                            name="avatar_url" placeholder="Http://">
                         </div>
            </div>

            <div class="item">
                <div>Modelo do veiculo</div>
                <div>
                    <input  type="text"
                            name="model" placeholder="Digite modelo e potencia. (ex: gol 1.0)">
                         </div>
            </div>
                   <div class="item">
                <div>Ano</div>
                <div>
                    <input  type="number" min=1990 max=2021
                            name="year" placeholder="(ex: 2018)">
                </div>
            </div>
                   <div class="item">
                <div>combustivel</div>
                <div>
                    <span><input type="radio" name="fuel" value="G" checked>Gasolina</span>
                    <span><input type="radio" name="fuel" value="F">Flex</span>
                </div>
            </div>
                   <div class="item">
                <div>Opcionais</div>
                <div>
                    <input  type="text" 
                            name="optional" placeholder="Separe os opcionais por Vírgula">
                </div>
            </div>
          <button type="submit">Salvar</button>
        </section>
    </form>
{% endblock content %}