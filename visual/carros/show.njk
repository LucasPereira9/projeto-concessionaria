{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="avatar">
            <img src="{{car.avatar_url}}">
        </section>
        
        <section class="details">

            <h3>DETALHES</h3>

            <div class="item">
                <div>Modelo do veiculo</div>
                <div>{{car.model}}</div>
            </div>
                   <div class="item">
                <div>Ano</div>
                <div>{{car.year}}</div>
            </div>
                   <div class="item">
                <div>combustivel</div>
                <div>{{"Gasolina" if car.fuel == "G" else "Flex"}}</div>
            </div>
                   <div class="item">
                <div>Opcionais</div>
                <div>
            {% for option in car.optional %}

                <span> {{option}} </span> 

             {% endfor %}

                </div>
            </div>

            <a href="#" class="button">Editar</a>

        </section>
    </div>
{% endblock content %}